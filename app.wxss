/**app.wxss**/

/* 1像素边框 */
.onepx-border-bottom {
  border-bottom: 1rpx solid #f5f5f5;
}
.onepx-border-top {
  border-top: 1rpx solid #f5f5f5;
}

.onepx-border-bottom-333 {
  /* border-bottom: 1rpx solid #333; */
  border-bottom: 1rpx solid #979797;
}
.no-bt {
  border-bottom: none;
}
/* ----------登录全局样式----------------- */
.login-container {
  color: #333;
  padding: 0 48rpx;
  padding-bottom: 116rpx;
  overflow: hidden;
}

.common-title {
  font-size: 60rpx;
  line-height: 40px;
  margin-top: 40rpx;
}

.common-subtitle {
  font-size: 30rpx;
  font-weight: 500;
  line-height: 42rpx;
  margin: 80rpx 0 30rpx 0;
}

.notice {
  font-size: 26rpx;
  color: #EF4646;
}

.input-box {
  padding-bottom: 28rpx;
}

.input-box .input-placeholder {
  color: #999;
}

/* 活动详情页 */
.apply-status {
  width: 136rpx;
  height: 36rpx;
  background: rgba(19, 171, 73, 0.1);
  border-radius: 2rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #13AB49;
}
.warning {
  background:rgba(239,172,70,0.1);
  color: #EFAC46;
}
.info {
  background:rgba(101, 101, 101, 0.1);
  color: #656565;
}
.arrow {
  width: 16rpx;
  height: 26rpx;
}
/* 没有内容 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #92979e;
  background-color: #f5f5f5;
  height: 100%;
}
.no-data .no-data-img {
  width: 250rpx;
  height: 250rpx;
  margin: 120rpx 0 26rpx 0;
}

.percent100{
  min-height: 100vh;
}
.white{
  background: white;
}
.gray{
  background: #f5f5f5;
}
.no-pt {
  padding-top: 0 !important;
}
.no-pb {
  padding-bottom: 0 !important;
}
