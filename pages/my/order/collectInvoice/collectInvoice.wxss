.collect-container {
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.collect-container .search-container {
  padding: 20rpx 48rpx;
}
.collect-container .search-container .search-box {
  display: flex;
  align-items: center;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 2rpx;
  color: #9C9C9D;
}
.collect-container .search-container .search-box .search-icon {
  margin: 0 12rpx 0 36rpx;
}
.collect-container .search-container .search-box .search-input {
  width: 100%;
}
.collect-container .collect-order-title {
  font-size: 36rpx;
  color: #333;
  background-color: #f5f5f5;
  padding: 48rpx 0 26rpx 48rpx;
}
.collect-order-title{
  line-height: 100%;
}
.collect-container .collect-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 48rpx 14rpx 48rpx 28rpx;
}
.collect-container .collect-item .activity-info .activity-name {
  font-size: 32rpx;
  color: #000;
  line-height: 32rpx;
  margin-bottom: 20rpx;
}
.collect-container .collect-item .activity-info .activity-time {
  font-size: 28rpx;
  color: #999;
  line-height: 28rpx;
}
.collect-container .btn-box {
  padding: 0 48rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  width: 100%;
  flex: 0 0 216rpx;
}
.collect-container .btn-box .share-btn {
  height: 88rpx;
  background: rgba(1,131,137,1);
  border-radius: 4px;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect-container .btn-box .share-btn::after {
  border: none;
}

/* ***************** */
.center{
  flex: 1 1 auto;
  /* overflow: hidden; */
  display: flex;
  flex-direction: column;
}
.title{
  height: 100rpx;
  max-height: 10%;
  font-size: 36rpx;
  color: #333;
  background-color: #f5f5f5;
  padding: 0 48rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
}
.none{/* 利用flex来实现文字垂直居中 */
  height: 100%;
  width: 1rpx;
}
.view1{

  flex: 1 2 auto;
  background: #fff;
  overflow: hidden;
  position: relative;
}
.view2{
  background: #fff;
  height: 300rpx;
}
.scroll{
  height: 100%;
}
.scroll1{
  position: absolute;
}
.no-collect-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #92979e;
  height: 100%;
}
.no-collect-img {
  width: 250rpx;
  height: 250rpx;
}