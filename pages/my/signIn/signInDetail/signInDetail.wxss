/* pages/my/signIn/signInDetail/signInDetail.wxss */
page{
    background:rgba(245,245,245,1);
}
.backgrond{
    height:164rpx;
    background:rgba(1,131,137,1);
}
.activity-info{
    margin: -124rpx 48rpx 40rpx 48rpx;
    background:rgba(255,255,255,1);
    border-radius:8rpx;
    padding: 48rpx;
}
.activity-name{
    font-size:34rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:48rpx;
}
.activity-time{
    font-size:30rpx;
    color:rgba(51,51,51,1);
    line-height:42rpx;
    margin-top: 12rpx;
}
.activity-address{
    font-size:30rpx;
    color:rgba(51,51,51,1);
    line-height:42rpx;
    margin-top: 10rpx;
}
.record-list{
    margin: 0 48rpx 48rpx 48rpx;
    background:rgba(255,255,255,1);
    border-radius:8rpx;
}
.record-item{
    padding: 48rpx;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    /* border-bottom: 1rpx solid rgba(245,245,245,1); */
}
.item-time{
    font-size:34rpx;
    color:rgba(51,51,51,1);
    line-height:48rpx;
}

.item-description,.item-location{
    font-size:30rpx;
    color:rgba(51,51,51,1);
    line-height:42rpx;
    margin-top: 12rpx;
}
.no-signin{
    width: 144rpx;
    height: 60rpx;
    background:rgba(1,131,137,1);
    border-radius:2rpx;
    font-size:30rpx;
    color:rgba(255,255,255,1);
    line-height:60rpx;
    text-align: center;
    flex:0 0 144rpx;
}