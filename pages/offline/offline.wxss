/* pages/offline/offline.wxss */
.offline-container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.offline-container .offline-box {
  margin-top: 218rpx;
}
.offline-container .offline {
  width: 250rpx;
  height: 250rpx;
}
.offline-container .offline-info {
  font-size: 28rpx;
  color:rgba(146,151,158,1);
  line-height: 28rpx;
  margin: 26rpx 0 42rpx 0;
}
.offline-container .refresh {
  width: 160rpx;
  height: 56rpx;
  border-radius: 8rpx;
  border:1rpx solid rgba(1,131,137,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color:rgba(1,131,137,1);
}