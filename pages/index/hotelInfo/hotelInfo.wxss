.hotelInfo-wrapper {
  padding: 0 48rpx;
  background-color: #f5f5f5;
  padding-bottom: 230rpx;
}
.hotelInfo-wrapper .title {
  font-size: 60rpx;
  color: #333333;
  line-height: 80rpx;
  padding-top: 40rpx;
}
.hotelInfo-wrapper .choose-box {
  display: flex;
  align-items: center;
}
.hotelInfo-wrapper .choose-box .choose-item {
  font-size: 36rpx;
  color: #333;
  display: flex;
  align-items: center;
  margin-right: 106rpx;
}
.hotelInfo-wrapper .choose-box .choose-item .choose-icon {
  margin-left: 12rpx;
}
.hotelInfo-wrapper .minus-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.hotelInfo-wrapper .radio-value {
  margin-right: 12rpx;
  font-size: 26rpx;
  color: #333;
}
.hotelInfo-wrapper .radio {
  transform: scale(0.8);
}
.hotelInfo-wrapper .pay-thirdtitle {
  font-size: 26rpx;
  line-height: 36rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.hotelInfo-wrapper .pay-thirdtitle.mt16 {
  margin-top: 32rpx;
}
.hotelInfo-wrapper .pay-card {
  width: 654rpx;
  background: #fff;
  border-radius: 8rpx;
  color: #333;
  margin-bottom: 40rpx;
  margin-top: 50rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top {
  padding: 48rpx 48rpx 0 48rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .pay-subtitle {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 42rpx;
  margin-bottom: 32rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info {
  display: flex;
  justify-content: space-between;
  padding-bottom: 26rpx;
  margin-top: 32rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .hotel-info {
  width: 556rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .pay-card-left {
  display: flex;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .choose-room {
  display: flex;
  margin-bottom: 32rpx;
  flex-wrap: wrap;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .choose-room .room-box {
  width: 200rpx;
  height: 58rpx;
  border-radius: 2rpx;
  border: 1rpx solid #EDEDED;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  line-height: 22rpx;
  color: #333;
  margin-right: 22rpx;
  margin-top: 20rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .choose-room .room-box.selected {
  border-color: #018389;
  color: #018389;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .choose-room .room-box .room-icon {
  height: 40rpx;
  margin-right: 8rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .choose-room .room-box .room-icon.single {
  width: 16rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .choose-room .room-box .room-icon.double {
  width: 32rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .choose-room .room-box .room-icon.triple {
  width: 50rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .radio-group {
  display: flex;
  justify-content: space-between;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .radio-group.radio-group-pay {
  margin-bottom: 32rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .radio-group .num-radio .radio-box {
  display: flex;
  align-items: center;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .radio-group .num-radio .radio-box .num-input {
  font-size: 20rpx;
  width: 102rpx;
  height: 56rpx;
  margin-right: 8rpx;
  border-radius: 2rpx;
  opacity: 0.35;
  border: 1rpx solid #979797;
  box-sizing: border-box;
  text-align: center;
  color: #000;
}
.hotelInfo-wrapper .pay-card .pay-card-top .person-info .hotel-radio-group .hotel-radio .hotel-radio-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.hotelInfo-wrapper .pay-card .pay-card-bottom {
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: flex-end;
  padding: 30rpx 48rpx 30rpx 0;
  font-size: 30rpx;
  font-weight: 500;
  color: #018389;
}
.hotelInfo-wrapper .pay-card .card-no-data {
  font-size: 26rpx;
  color: #999;
  line-height: 36rpx;
  margin-bottom: 32rpx;
}
.hotelInfo-wrapper .btn-box {
  height: 224rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 48rpx 0rpx 48rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #F5F5F5;
  z-index: 2;
}


