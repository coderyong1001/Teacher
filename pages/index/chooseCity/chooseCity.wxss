/* 城市搜索 */
.city-header-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 18rpx;
  /* position: fixed;
  z-index: 4;
  top: 0;
  width: 100%;
  background: #fff; */
  box-sizing: border-box;
}
.city-header-container .cancel-btn {
  font-size: 30rpx;
  color:rgba(51,51,51,1);
}
.city-box {
  display: flex;
  align-items: center;
  height: 60rpx;
  background:rgba(0,0,0,0.05);
  border-radius: 2rpx;
  width: 100%;
  box-sizing: border-box;
}
.city-box.focusStyle {
  width: 610rpx;
}
.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin: 0 12rpx 0 28rpx;
}
.city-search {
  font-size: 30rpx;
  color: #9C9C9D;
  width: 80%;
}

/* 当前、热门城市、城市列表 */
.city-title {
  background:rgba(245,245,245,1);
  padding: 20rpx 0 20rpx 30rpx;
  font-size: 26rpx;
  color: #999;
}
.current-hot-box {
  background:rgba(245,245,245,1);
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.location-box {
  display: flex;
  align-items: center;
}
.current-hot-box .openLocation {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}
.current-hot-citys {
  width: 208rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background:rgba(255,255,255,1);
  border-radius: 4rpx;
  border:1rpx solid rgba(238,238,238,1);
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  padding: 0 18rpx;
}
.current-hot-box.no-pb {
  padding-bottom: 0;
}

.city-item {
  padding: 28rpx 0;
  margin-left: 30rpx;
  font-size: 34rpx;
  color: #333;
  background-color: #fff;
}
.city-right {
  position: fixed;
  top: 50%;
  right: 10rpx;
  height: 774rpx;
  margin-top: -387rpx;
  font-size: 22rpx;
  font-weight:500;
  color:rgba(1,131,137,1);
  display: flex;flex-direction: column;
  align-items: center;
}

/* 显示当前字母 */
.letter-box {
  width: 150rpx;
  height: 150rpx;
  background: #fff;
  border-radius: 15rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 80rpx;
  margin: auto;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 3;
  color: #333;
  box-shadow: 0 0 150rpx rgba(0, 0, 0, 0.35);
}
